  <table class='table'>
    <tbody>
      <% book.book_comments.each do |book_comment| %>
        <tr>
          <td><%= image_tag book_comment.user.get_profile_image, size:"50x50" %></td>
          <td><%= book_comment.comment %></td>
          <td><%= link_to 'Destroy', book_book_comment_path(book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>